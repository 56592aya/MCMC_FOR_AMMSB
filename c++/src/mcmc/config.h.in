#ifndef __MCMC_CONFIG_H__
#define __MCMC_CONFIG_H__

namespace mcmc {

#cmakedefine MCMC_ENABLE_RAMCLOUD
#cmakedefine MCMC_ENABLE_RDMA

#cmakedefine MCMC_ENABLE_OPENMP
#cmakedefine MCMC_ENABLE_DISTRIBUTED

#cmakedefine MCMC_RANDOM_SYSTEM
#cmakedefine MCMC_SOURCE_AWARE_RANDOM
#cmakedefine MCMC_EDGESET_IS_ADJACENCY_LIST

#cmakedefine MCMC_RANDOM_COMPATIBILITY_MODE
#cmakedefine MCMC_EFFICIENCY_COMPATIBILITY_MODE
#cmakedefine MCMC_GRAPH_COMPATIBILITY_MODE

#cmakedefine MCMC_SINGLE_PRECISION

#ifdef MCMC_SINGLE_PRECISION
typedef float   Float;
#define FLOAT(x)        x ## f
#else
typedef double  Float;
#define FLOAT(x)        x ## lf
#endif

#ifdef MCMC_EFFICIENCY_COMPATIBILITY_MODE
#  ifndef MCMC_RANDOM_COMPATIBILITY_MODE
#    define MCMC_RANDOM_COMPATIBILITY_MODE
#  endif
#endif
#if defined MCMC_RANDOM_COMPATIBILITY_MODE && defined MCMC_EDGESET_IS_ADJACENCY_LIST
#  error "Cannot have Python compatibility and sparsehash at the same time"
#endif
#if defined MCMC_RANDOM_COMPATIBILITY_MODE && ! defined MCMC_SOURCE_AWARE_RANDOM
#  error "Cannot have Python compatibility without source-aware random"
#endif
#if defined MCMC_ENABLE_RAMCLOUD && ! defined MCMC_ENABLE_DISTRIBUTED
#  error "No point in RamCloud without distributed algorithm"
#endif
#if defined MCMC_ENABLE_RDMA && ! defined MCMC_ENABLE_DISTRIBUTED
// #  error "No point in RDMA without distributed algorithm"
#endif


}  // namespace mcmc

#endif  // __MCMC_CONFIG_H__
